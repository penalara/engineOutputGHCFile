{
    "$id": "engineOutputGHCSchema",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "EngineOutputGHCSchema",
    "description": "Schema document to format in Json the timetable  generated by PenalaraGHC..",
    "type": "object",
    "required": [
        "date",
        "timetable"
    ],
    "properties": {
        "date": {
            "title": "JsonGenerationDate",
            "description": "Timetable's generation date.",
            "type": "string",
            "format": "date-time"
        },
        "timetable": {
            "title": "GeneratedJsonTimetable",
            "description": "Object with the specification of the resolved schedule.",
            "type": "object",
            "required": [
                "assigendSections"
            ],
            "properties": {
                "assigendSections": {
                    "title": "AssigendSections",
                    "description": ".",
                    "type": "array",
                    "additionalItems": false,
                    "items": {
                        "title": "AssigendSection",
                        "description": ".",
                        "type": "object",
                        "required": [
                            "refFrame",
                            "day",
                            "realIndex",
                            "fictionalIndex",
                            "sessionsAsigned"
                        ],
                        "properties": {
                            "refFrame": {
                                "description": "",
                                "type": "string"
                            },
                            "day": {
                                "description": "Day of the week when is located the section.",
                                "type": "integer"
                            },
                            "realIndex": {
                                "description": "",
                                "type": "integer"
                            },
                            "fictionalIndex": {
                                "description": "",
                                "type": "integer"
                            },
                            "sessionsAsigned": {
                                "title": "SessionsAsigned",
                                "description": ".",
                                "type": "array",
                                "additionalItems": false,
                                "items": {
                                    "title": "SessionAsigned",
                                    "description": ".",
                                    "type": "object",
                                    "required": [
                                        "refSesion"
                                    ],
                                    "properties": {
                                        "refSesion": {
                                            "description": "",
                                            "type": "integer"
                                        },
                                        "refClassRomms": {
                                            "title": "RefclassRomms",
                                            "description": ".",
                                            "type": "array",
                                            "additionalItems": false,
                                            "items": {
                                                "title": "RefclassRomm",
                                                "description": "",
                                                "type": "string"
                                            }
                                        },
                                        "refTeachers": {
                                            "title": "RefTeachers",
                                            "description": ".",
                                            "type": "array",
                                            "additionalItems": false,
                                            "items": {
                                                "title": "RefTeacher",
                                                "description": "",
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "anonymousClassRooms": {
                    "title": "SetOfAnonymousClassRooms",
                    "description": ".",
                    "type": "array",
                    "additionalItems": false,
                    "items": {
                        "title": "AnonymousClassRoom",
                        "description": "",
                        "type": "object",
                        "required": [
                            "refClassRoomsSet",
                            "classRoomsCreated"
                        ],
                        "properties": {
                            "refClassRoomsSet": {
                                "description": "Identifier name of the ClassRooms group.",
                                "type": "string"
                            },
                            "classRoomsCreated": {
                                "title": "ListOfAnonymousRooms",
                                "description": ".",
                                "type": "array",
                                "additionalItems": false,
                                "items": {
                                    "title": "AnonymousRoom",
                                    "description": "",
                                    "type": "string"
                                }
                            }
                        },
                        "additionalProperties": false
                    }
                }
            },
            "additionalProperties": false
        }
    }
}
